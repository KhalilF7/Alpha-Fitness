{% extends 'basef.html.twig' %}
{% block navdisactive %}{% endblock %}
{% block navactive %}active{% endblock %}
{% block title %}
    <title>Alpha Fitness | Boutique</title>
{% endblock %}
{% block produitsback %}
    <div class="w3l-index2">
        <div class="content">
            <div class="container">
                <nav id="breadcrumbs" class="breadcrumbs">
                    <div class="container page-wrapper text-center">
                        <div class="header-section">
                            <h2 class="mb-2">Nos Matériels Sportifs</h2>
                        </div>
                        <a href="{{ path('dashboard_f') }}">Accueil</a> » <span class="breadcrumb_last" aria-current="page">Boutique</span>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}

{% block produits %}

    <section class="w3l-courses py-5">
        <div class="content1">
            <div class="container py-lg-3">
                <div class="header-section mb-5 text-center mx-auto">
                </div>
                <div class="owl-courses owl-carousel owl-theme">
                    {% for stock in stocks %}
                        <div class="item">
                            <div class="course-grid">
                                <div class="course-cont" style="background-image: url(../../images/{{ stock.idproduit.idcategorie.imagecat }}); background-repeat: no-repeat; background-size: cover;">
                                    <div class="course-img">
                                        <a href="{{ path('details', {'id': stock.id}) }}"><img src="../images/{{ stock.idproduit.imgproduit }}" height="220">
                                            {% set difference = date(stock.dateentree).diff(date()) %}
                                            {% set leftDays = difference.days %}
                                            {% if leftDays <= 30 %}
                                                <img class="image2" src="../images/newproduct.png" width="70"/>
                                            {% endif %}
                                            <div class="price red">
                                                <h4>{{ stock.idproduit.prix }} DT</h4>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="course-cont">
                                    <span class="subject red">{{ stock.idproduit.nom }}</span>
                                    <table class="admin-post">
                                        <tr>
                                            <td><span class="fa fa-shopping-cart"></span></td>
                                            <td><input type="number" class="form-control" id="exampleInputQuantity" name="qunatity" min="1" max="{{ stock.quantite }}"></td>
                                            <td>
                                                <a href="{{path("add", {id: stock.idproduit.id})}}" class="btn btn-primary">
                                                    <i class="fa fa-cart-plus"></i> Ajouter
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                    <a href="{{ path('details', {'id': stock.id}) }}" class="blog-btn mt-3">Détails <span class="fa fa-long-arrow-right" aria-hidden="true"></span></a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <!-- index-block2 -->
    <section class="w3l-index3 py-5">
        <div class="container py-md-3">
            <div class="header-section text-center mx-auto">
                <h3>Produits Exclusifs </h3>
            </div>
            <div class="row pt-md-3">
                <div class="col-lg-9 col-md-10 mx-auto">
                    <div class="accordion" id="accordionExample">
                        {% for stock in stocks %}
                            {% set difference = date(stock.dateentree).diff(date()) %}
                            {% set leftDays = difference.days %}
                            {% if leftDays <= 30 %}
                                <div class="subject-card mt-4" style="background-image: url(../../images/{{ stock.idproduit.idcategorie.imagecat }}); background-repeat: no-repeat; background-size: cover;--title-color: var(--primary-color); --text-color: var(--primary-color);">
                                    <div class="subject-card-header p-0" id="headingOne">
                                        <a href="#" class="card__title p-3 p-lg-4 collapsed d-block" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                            <div class="row">
                                                <div class="col-md-5 subject-img">
                                                    <img src="../images/{{ stock.idproduit.imgproduit }}" class="img-fluid img-curve" alt="" /><img class="image2" src="../images/newproduct.png" width="70"/>
                                                </div>
                                                <div class="col-md-7 subject-content mt-md-0 mt-4">
                                                    <h3>{{ stock.idproduit.nom }}</h3>
                                                    <p>{{ stock.idproduit.idcategorie }}</p>
                                                    <span class="course-number">
                                                <table>
                                                    <tr>
                                                        <td><span class="fa fa-shopping-cart"></span></td>
                                                        <td><input type="number" class="form-control" id="exampleInputQuantity" name="qunatity" min="1" max="{{ stock.quantite }}"></td>
                                                        <td><button class="btn btn-primary">Acheter</button></td>
                                                    </tr>
                                                </table>
                                            </span>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /index-block2 -->
{% endblock %}
